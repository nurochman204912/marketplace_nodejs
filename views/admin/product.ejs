<%- include('../layout/adminheader') %>

<h2 class="page-title">Product Data</h2>
<a href="/admin/product/add-product" class="btn btn-primary">Add a new product</a>
<br><br>

<% if(count > 0){ %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Product</th>
			<th>Price</th>
			<th>Category</th>
			<th>Product image</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		<% product.forEach(function(products){ %>
			<tr>
				<td><%= products.title %></td>
				<td><%= products.price %></td>
				<td><%= products.categories %></td>
				<td>
					<% if(products.image == "") { %>
						<img id="noimage" src="/images/noimage.png">
					<% }else{ %>
						<img id="noimage" src="/product_images/<%= products._id %>/<%= products.image %>">
					<% } %>
				</td>
				<td><a href="/admin/product/edit-product/<%= products._id %>">Edit</a></td>
				<td><a href="/admin/product/delete-product/<%= products._id %>" class="confirmDeletionProduct">Delete</a></td>
			</tr>
		<% }); %>
	</tbody>
</table>

<% }else{ %>
	<h3 class="text-center">Tidak ada data product</h3>
<% } %>
<%- include('../layout/adminfooter') %>